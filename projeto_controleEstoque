     escreval
     escreval("Informe a opção desejada:")
     leia(opcao)
     escolha opcao

     caso 1
    escreval("===============================================================")
    escreval("                CATÁLOGO DE MEDICAMENTOS - INCLUIR             ")
    escreval("===============================================================")
    escreval
    escreval("1 - Dipirona")
    escreval("2 - Ibuprofeno")
    escreval("3 - Clonazepam")
    escreval("4 - Losartana")
    escreval("5 - Ritalina")
    escreval("6 - Furosemida")
    escreval("7 - Amoxicilina")
    escreval("8 - Cefalina")
    escreval("9 - Omeprazol")
    escreval("10 - Simeticona")
    escreval

 repita
    escreval("Informe o medicamento desejado (1 a 10):")
    leia(codigoRemedio)

    // Apenas mostre a mensagem de erro se a entrada for inválida.
    se (codigoRemedio < 1) ou (codigoRemedio > 10) entao
        escreval
        escreval("================================")
        escreval("Opção inválida. Tente novamente.")
        escreval("================================")
        escreval

    fimse

// A condição de parada garante que o loop só termine quando o código for válido.
              ate (codigoRemedio >= 1) e (codigoRemedio <= 10)
           escreval
           escreval("Quantas unidades serão registradas?")
           leia(qtd)

           se qtd > 0 entao
              escolha codigoRemedio
        caso 1
            dipirona <- dipirona + qtd
            escreval("____________________________________________________________")
            escreval
