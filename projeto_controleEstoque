Algoritmo "ControleDeEstoque_VisualG"
Var
  usuario, senha: caractere
  opcao, qtd, codigoRemedio, correcao: inteiro
  dipirona, ibuprofeno, clonazepam, losartana, ritalina: inteiro
  furosemida, amoxicilina, cefalina, omeprazol, simeticona: inteiro

Inicio
  dipirona <- 100
  ibuprofeno <- 75
  clonazepam <- 15
  losartana <- 100
  ritalina <- 20
  furosemida <- 10
  amoxicilina <- 50
  cefalina <- 10
  omeprazol <- 100
  simeticona <- 10

  repita
  escreval
  escreval (">>>>>>>>>> LOGIN <<<<<<<<<<")
  escreval
  escreval("Usuário:")
  leia(usuario)

  se usuario <> "admin" entao
    escreval
    escreval("Usuário não encontrado! Tente novamente.")
  fimse
ate usuario = "admin"

// Loop para validar senha (mantendo usuário correto)
repita

  escreval
  escreval("Senha:")
  leia(senha)

  se senha <> "pharmaios" entao
    escreval
    escreval("Senha incorreta! Tente novamente.")
  fimse
ate senha = "pharmaios"

     escreval
     escreval("===============================================================")
     escreval("           SISTEMA DE CONTROLE DE ESTOQUE - PharmaIOS          ")
