package Aula06_For;

import java.util.Scanner;

public class Exemplowhile {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String userCorreto = "admin";
        String senhaCorreto = "123";

// tentativas usando While para entrar no sistema
        int tentativa = 1;
        while (tentativa <=3) { 
      
            System.out.println("Digite o seu usuario :");
            String userDigitado = sc.nextLine();
    
            System.out.println("Digite a sua senha:");
            String senhaDigitada = sc.nextLine();           


        if (userDigitado.equals(userCorreto) && senhaDigitada.equals(senhaCorreto)) {
            System.out.println("Você está logado!");
            break;
        } 
        
        else{
            System.out.println("Você não conseguiu!");
            System.out.println("Tentativa: " + tentativa +" de 3");   
        }
    
        }
sc.close();
}
}

//userDigitado.equals(userCorreto) && senhaDigitada.equals(senhaCorreto)
